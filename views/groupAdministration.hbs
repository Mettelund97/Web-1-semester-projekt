<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kubelab</title>
    <link rel="stylesheet" href="/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
  </head>

  <body>
    <section class="content">
      <nav aria-label="Breadcrumb">
        <ol class="breadcrumb">
          <li aria-current="page">Group administration</li>
        </ol>
      </nav>
      <section class="groups">
        <div class="sectionhead">
          <h2>Group administration</h2>
          <div class="line"></div>
        </div>
        <div class="groupssection">
          <div class="searchBar2">
            <input type="text" placeholder="Search.." />
          </div>
          <div class="toggle-container">
            <input type="checkbox" id="toggle" class="toggle-input" />
            <label for="toggle" class="toggle-label"></label>
            <p class="togglep">what ever you want to toggle here</p>
          </div>
        </div>
        <div class="container-btn2">
          <a href="/create-new-group" class="button-link"><img
              src="/images/plusikon.svg"
              alt="Icon"
              class="buttonikon"
            />Create new group</a>
        </div>
      </section>
    </section>
    <script src="/scripts/javascript.js"></script>
  </body>
</html>