<section class="content">
  <nav aria-label="Breadcrumb">
    <ol class="breadcrumb">
      <li><a href="/">Projects</a></li>
      <li aria-current="page">Create new project</li>
    </ol>
  </nav>
  <section>
    <div class="sectionhead">
      <h2>Create a new project</h2>
      <div class="line"></div>
    </div>
    {{#if error}}
      <div class="alert alert-error">
        {{error}}
      </div>
    {{/if}}

    <form
      id="projectForm"
      method="POST"
      action="/start-new-project"
      onsubmit="return validateSubdomains()"
    >
      <div class="inputsection">
        <div class="input-field2">
          <input
            type="text"
            id="projectname"
            name="projectname"
            placeholder="Project name*"
            minlength="3"
            required
          />
        </div>

        <div
          class="input-field2"
          style="display: flex; align-items: center; gap: 10px;"
        >
          <input
            type="text"
            id="subdomainname"
            name="subdomainname"
            placeholder="* Subdomain *"
            title="Subdomain should not end with .kubelab.dk, the domain name is automatically added"
            required
          />
          <input
            type="text"
            disabled
            value=".kubelab.dk"
            placeholder=".kubelab.dk"
            style="cursor: not-allowed;"
          />
        </div>

        <div>
          <select id="template" name="template" required class="add-m-select">
            <option value="">Choose template / service</option>
            {{#each templates}}
              <option value="{{this.id}}">{{this.name}}</option>
            {{/each}}
          </select>
        </div>
      </div>

      <div class="container-btn2">
        <button type="submit" class="button-link" id="submitBtn">
          <img src="/images/plusikon.svg" alt="Icon" class="buttonikon" />
          Create project
        </button>
      </div>
    </form>
  </section>
</section>