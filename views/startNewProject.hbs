<section class="content">
  <nav aria-label="Breadcrumb">
    <ol class="breadcrumb">
      <li><a href="/">Dashboard</a></li>
      <li aria-current="page">Start new project</li>
    </ol>
  </nav>
  <section>
    <div class="sectionhead">
      <h2>Create a new project</h2>
      <div class="line"></div>
    </div>
    {{#if error}}
      <div class="alert alert-error">
        {{error}}
      </div>
    {{/if}}

    <form id="projectForm" method="POST" action="/start-new-project">
      <div class="inputsection">
        <div class="input-field2">
          <input
            type="text"
            id="projectname"
            name="projectname"
            placeholder="Project name*"
            minlength="3"
            required
          />
        </div>
        <div class="input-field2">
          <input
            type="text"
            id="subdomainname"
            name="subdomainname"
            placeholder="Subdomain name* (must end with .kubelab.dk)"
            pattern="^[a-zA-Z0-9-]+\.kubelab\.dk$"
            title="Use only letters, numbers, and hyphens, ending with .kubelab.dk"
            required
          />
        </div>
        <div class="custom-select">
          <select id="template" name="template" required>
            <option value="">Choose template / service</option>
            {{#each templates}}
              <option value="{{this.id}}">{{this.name}}</option>
            {{/each}}
          </select>
        </div>

        {{!-- <div class="custom-select">
