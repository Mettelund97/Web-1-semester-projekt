<section class="content">
  <nav aria-label="Breadcrumb">
    <ol class="breadcrumb">
      <li aria-current="page">Add new member</li>
    </ol>
  </nav>
  <section class="my-projects">
    <div class="sectionhead">
      <h2>Add member</h2>
      <div class="line"></div>
    </div>
    <div class="input-field2">
      <input
        type="text"
        id="firstname"
        name="firstname"
        placeholder="First name"
        required
      />
    </div>
    <div class="input-field2">
      <input
        type="text"
        id="lastname"
        name="lastname"
        placeholder="Last name"
        required
      />
    </div>
    <div class="input-field2">
      <input
        type="email"
        id="email"
        name="email"
        placeholder="Email"
        required
      />
    </div>
    <div class="sectionhead2">
      <h3>Choose member role</h3>
    </div>
    <div class="custom-select">
      <select id="mySelect" required>
        <option value="apple">Choose member role</option>
        <option value="banana">Admin</option>
        <option value="cherry">Student</option>
      </select>
    </div>
    <div class="sectionhead2">
      <h3>Choose group</h3>
    </div>
    <div class="custom-select">
      <select id="mySelect" required>
        <option value="apple">Choose group</option>
        <option value="banana">WUO24</option>
        <option value="cherry">WUO23</option>
      </select>
    </div>
    <div class="container-btn2 btn3">
      <a href="/create-new-group" class="button-link">Add new member</a>
    </div>

    <div class="sectionhead">
      <h2>Create Members with CSV</h2>
      <div class="line"></div>
    </div>
    <div class="sectionhead sectionhead2">
      <h3>Upload CSV</h3>
    </div>

    <div id="drop-area">
    Drag here to preview
    </div>
    <input type="file" id="file-input" multiple hidden>
    <div id="preview-container"></div>
    <div class="container-btn2 btn3">
      <a href="/create-new-group" class="button-link">Add new member</a>
    </div>

  </section>
</section>